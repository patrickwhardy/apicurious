<div class="row">
  <div class="col s12 m10">
    <div class="card-panel teal">
      <% if current_user %>
        <img src="<%= current_user.avatar %>", height="100px", width="100px" ></br>
        Hello, <%= "#{current_user.first_name} #{current_user.last_name}" %>
        <ul class="collection">
          <% @activities.each do |activity| %>
            <li class="collection-item"><%= link_to activity.name, activity_path(activity.id) %></li>
          <% end %>
          <li class="collection-item"><%= link_to "Logout", logout_path, method: :delete %></li>
        </ul>
        <% else %>
          <%= link_to "Sign in with Strava", strava_login_path %>
        <% end %>
    </div>
  </div>
</div>
